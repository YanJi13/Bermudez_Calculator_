<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/numButton_3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:text="3"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/funcButton_Min"
        app:layout_constraintTop_toBottomOf="@+id/numButton_6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="327dp"
        android:layout_height="119dp"
        android:layout_marginStart="42dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="69dp"
        android:text=""
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/numButton_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/numButton_7"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="1dp"
        android:text="7"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/numButton_8"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/numButton_8"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="1dp"
        android:text="8"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/numButton_9"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/numButton_9"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="5dp"
        android:text="9"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/funcButton_Division"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/numButton_4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:text="4"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/numButton_5"
        app:layout_constraintTop_toBottomOf="@+id/numButton_7" />

    <Button
        android:id="@+id/numButton_6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:text="6"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/funcButton_Multiply"
        app:layout_constraintTop_toBottomOf="@+id/numButton_9" />

    <Button
        android:id="@+id/numButton_5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:text="5"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/numButton_6"
        app:layout_constraintTop_toBottomOf="@+id/numButton_8" />

    <Button
        android:id="@+id/funcButton_Multiply"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="44dp"
        android:text="X"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/funcButton_Division" />

    <Button
        android:id="@+id/funcButton_Division"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="44dp"
        android:text="รท"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/funcButton_Add"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="45dp"
        android:text="+"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/funcButton_Min" />

    <Button
        android:id="@+id/funcButton_Clear"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="44dp"
        android:text="AC"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/funcButton_Add" />

    <Button
        android:id="@+id/funcButton_Back"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:text="C"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/funcButton_Add"
        app:layout_constraintTop_toBottomOf="@+id/numButton_3" />

    <Button
        android:id="@+id/numButton_2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:text="2"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/numButton_3"
        app:layout_constraintTop_toBottomOf="@+id/numButton_5" />

    <Button
        android:id="@+id/numButton_1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:text="1"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/numButton_2"
        app:layout_constraintTop_toBottomOf="@+id/numButton_4" />

    <Button
        android:id="@+id/numButton_0"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:text="0"
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/numButton_dot"
        app:layout_constraintTop_toBottomOf="@+id/numButton_2" />

    <Button
        android:id="@+id/funcButton_Equals"
        android:layout_width="225dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="5dp"
        android:text="="
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/funcButton_Clear"
        app:layout_constraintTop_toBottomOf="@+id/numButton_dot" />

    <Button
        android:id="@+id/numButton_dot"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:text="."
        android:textSize="25dp"
        app:layout_constraintEnd_toStartOf="@+id/funcButton_Back"
        app:layout_constraintTop_toBottomOf="@+id/numButton_2" />

    <Button
        android:id="@+id/funcButton_Min"
        android:layout_width="90dp"
        android:layout_height="75dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="44dp"
        android:text="-"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/funcButton_Multiply" />

</androidx.constraintlayout.widget.ConstraintLayout>